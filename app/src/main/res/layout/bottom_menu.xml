<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/fontbuttompart2"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/bottom_menu_home"
        style="@style/BottomButton"
        android:background="@null"
        android:src="@drawable/ic_home_white_36dp" />

    <ImageButton
        android:id="@+id/bottom_menu_myposts"
        style="@style/BottomButton"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_card_giftcard_black_24dp" />

    <ImageButton
        android:id="@+id/bottom_menu_addgift"
        style="@style/BottomButton"
        android:background="@null"
        android:src="@drawable/ic_add_circle_outline_white_36dp" />

    <ImageButton
        android:id="@+id/bottom_menu_faivorite"
        style="@style/BottomButton"
        android:background="@null"
        android:src="@drawable/ic_stars_white_36dp" />

    <ImageButton
        android:id="@+id/bottom_menu_userprofile"
        style="@style/BottomButton"
        android:background="@null"
        android:src="@drawable/ic_perm_identity_white_36dp" />

</LinearLayout>